<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape android:shape="rectangle">
            <padding android:top="0dp"
                android:right="0dp"
                android:bottom="2dp"
                android:left="0dp" />
            <corners android:radius="40dp" />
            <solid android:color="@color/text_like_counter" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:top="0dp"
                android:right="0dp"
                android:bottom="3dp"
                android:left="0dp" />
            <corners android:radius="30dp" />
            <solid android:color="@color/linkedin_blue" />

        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/linkedin_blue" />
            <corners android:radius="20dp" />

        </shape>
    </item>
</layer-list>