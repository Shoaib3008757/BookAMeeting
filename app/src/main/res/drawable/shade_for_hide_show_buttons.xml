<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape android:shape="rectangle">
            <padding android:top="0dp"
                android:right="2dp"
                android:bottom="1dp"
                android:left="0dp" />
            <corners android:radius="40dp" />
            <solid android:color="#23050505" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:top="0dp"
                android:right="2dp"
                android:bottom="4dp"
                android:left="0dp" />
            <corners android:radius="40dp" />
            <solid android:color="#48201F1F" />

        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="15dp" />

        </shape>
    </item>
</layer-list>