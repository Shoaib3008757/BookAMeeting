<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#D6D6D6" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="0dp" android:right="0dp" android:top="0dp"
                >
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#ffffff" android:startColor="#ffffff" />
                    <stroke android:width="0dp" android:color="#BABABA" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="0dp" android:left="10dp"
                        android:right="0dp" android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>

