<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/verticall_item_background"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/rl_single_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:id="@+id/ll_timmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_hrs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/linkedin_blue"
                        android:text=""
                        android:paddingBottom="4dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_minuts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/linkedin_blue"
                        android:text=""
                        android:paddingBottom="4dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/linkedin_blue"
                        android:text=""
                        android:paddingBottom="4dp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_main_item_views"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:animateLayoutChanges="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:orientation="horizontal"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/tv_assigned_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Room No:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>

                            <TextView
                                android:id="@+id/tv_cutomer_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_toRightOf="@+id/tv_assigned_to"
                                android:layout_marginLeft="4dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:id="@+id/tv_txt_total_items"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Booked By:"
                                android:fontFamily="@font/normal_text_font"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_total_items"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/tv_txt_start_date"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_customer_building"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/tv_building_name_tag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Customer Name:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>

                            <TextView
                                android:id="@+id/tv_building_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_toRightOf="@+id/tv_assigned_to"
                                android:layout_marginLeft="4dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_customer_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/tv_customer_phone_tag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Customer Phone:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>

                            <TextView
                                android:id="@+id/tv_customer_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_toRightOf="@+id/tv_assigned_to"
                                android:layout_marginLeft="4dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:id="@+id/tv_txt_request_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Start Time:"
                                android:fontFamily="@font/normal_text_font"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_request_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/tv_txt_start_date"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/linkedin_blue"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="End Time:"
                                android:fontFamily="@font/normal_text_font"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_end_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/tv_txt_start_date"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/linkedin_blue"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_txt_start_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Place Date:"
                                android:fontFamily="@font/normal_text_font"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_order_taken_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10-jul-2018"
                                android:fontFamily="@font/normal_text_font"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/tv_txt_start_date"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_order_placed_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp">
                            <TextView
                                android:id="@+id/tv_m_place_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Meeting Duration:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_place_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/tv_txt_start_time"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_twork_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp">
                            <TextView
                                android:id="@+id/tv_m_twork_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total Work Time:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_twork_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/tv_txt_start_time"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_assign_to"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp">
                            <TextView
                                android:id="@+id/tv_m_assign_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Office Name:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_assign_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/tv_txt_start_time"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_forman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp">
                            <TextView
                                android:id="@+id/tv_m_forman"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Foreman:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_forman"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/tv_txt_start_time"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_op"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp">
                            <TextView
                                android:id="@+id/tv_m_op"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Operational:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_op"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/tv_txt_start_time"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_purchaser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp">
                            <TextView
                                android:id="@+id/tv_m_purchaser"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Purchaser:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_purchaser"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/tv_txt_start_time"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_deliverd_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/tv_m_delivered_by"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Delivered By:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_delivered_by"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/tv_txt_start_time"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/ll_delivery_on"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/tv_m_delivery_on"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Delivery On:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textColor="@color/color_text_hint"/>
                            <TextView
                                android:id="@+id/tv_delivery_on"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/tv_txt_start_time"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <LinearLayout
                        android:id="@+id/ll_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/tv_satus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weting for finace"
                            android:fontFamily="@font/normal_text_font"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:id="@+id/ll_delivery_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tv_m_delivery_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Delivery Date:"
                                android:fontFamily="@font/normal_text_font"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/color_text_hint"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/tv_delivery_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="07-Des-2018"
                                android:layout_weight="1"
                                android:fontFamily="@font/normal_text_font"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_toRightOf="@+id/tv_txt_start_time"
                                android:layout_marginLeft="4dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_delivery_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:12 am"
                            android:fontFamily="@font/normal_text_font"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_toRightOf="@+id/tv_txt_start_time"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/tv_item_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/normal_text_font"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal_text_font"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_customerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal_text_font"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_customerLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal_text_font"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_customerLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal_text_font"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_orderCompletionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal_text_font"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/colorWhiteTrans"/>
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.ThreeBounce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/linkedin_blue" />


</RelativeLayout>